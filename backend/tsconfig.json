{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "types"],
  "ts-node": {
    "esm": true
  }
}
